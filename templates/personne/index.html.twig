{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
    <div class="row">
        {% for personne in personne %}

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ personne.firstname }} {{ personne.name }}</h6>
                    <p class="card-text">Age: {{ personne.age }}</p>
                    <a href="{{ path('personne.detail',{id:personne.id}) }}" class="card-link">detail</a>
                    <a href="{{ path('personne.delete',{id:personne.id}) }}" class="card-link">delete</a>

                </div>
            </div>


        {% endfor %}
        {% if isPaginated %}
    </div>
    <din class="row mt-2">
    <nav aria-label="Page navigation example">
    <ul class="pagination">
    {% if page != 1 %}
    <li class="page-item"><a class="page-link"
                             href="{{ path('personne.list.alls',{page:page-1,nbre:nbre}) }}">Previous</a></li>
    {% endif %}
    {% for i in range(1,nbrePage) %}
        <li class="page-item"><a class="page-link"
                                 href="{{ path('personne.list.alls',{page:i,nbre:nbre}) }}">{{ i }}</a></li>
    {% endfor %}
    {% if page !=  nbrePage %}

        <li class="page-item"><a class="page-link"
                                 href="{{ path('personne.list.alls',{page:page+1,nbre:nbre}) }}">Next</a></li>
        {% endif %}

        </ul>
        </nav>
        </din>
    {% endif %}
{% endblock %}
